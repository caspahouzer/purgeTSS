{
	"name": "purgetss",
	"version": "1.5.6",
	"description": "Creates a clean app.tss file by combining your own base.tss file and all the used classes from tailwind.css and fontawesome.tss",
	"main": "index.js",
	"bin": {
		"purgetss": "bin/purgetss"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"purgetss": "node index",
		"build:fa-js": "node ./lib/build-fa-js",
		"build:fa-tss": "node ./lib/build-fa-tss",
		"build:tailwind": "node ./lib/build-tailwind",
		"build:fonts": "node ./lib/build-fonts-folder",
		"build:all": "npm run build:fa-js && npm run build:fa-tss && npm run build:tailwind && npm run build:fonts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/macCesar/purgeTSS.git"
	},
	"keywords": [
		"Appcelerator",
		"Titanium",
		"tailwind.tss",
		"fontawesome.tss",
		"cli"
	],
	"author": "CÃ©sar Estrada",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/macCesar/purgeTSS/issues"
	},
	"homepage": "https://github.com/macCesar/purgeTSS#readme",
	"devDependencies": {
		"@fortawesome/fontawesome-free": "^5.14.0",
		"@tailwindcss/ui": "^0.4.0",
		"read-css": "^0.3.0",
		"tailwindcss": "^1.5.1"
	},
	"dependencies": {
		"arg": "^4.1.3",
		"esm": "^3.2.25",
		"junk": "^3.1.0",
		"lodash": "^4.17.19",
		"path": "^0.12.7",
		"traverse": "^0.6.6",
		"xml-js": "^1.6.11"
	}
}
